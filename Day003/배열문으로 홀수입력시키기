using System;
using System.Collections.Generic;
using System.Diagnostics.CodeAnalysis;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ArrayApp002
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int[] arr = new int[5];
            for (int i = 0; i < 5; i++)
            {
                arr[i] = i * 2 + 1;
                Console.WriteLine(arr[i]);
            }
        }
    }
}




// 쉽게하는방법



using System;
using System.Collections.Generic;
using System.Diagnostics.CodeAnalysis;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ArrayApp002
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int sum = 0;
            int[] arr = new int[5];
            for (int i = 0, cnt = 1; i < arr.Length; i++, cnt += 2)               // << cnt 추가
            {
                arr[i] = cnt;
                Console.WriteLine(arr[i]);
            }
        }
    }
}
